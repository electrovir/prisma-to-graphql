    datasource db {
        provider = "sqlite"
        url      = "file:../../../.not-committed/dev.db"
    }



                model User {
                    id        String   @id @default(uuid())
                    createdAt DateTime @default(now())
                    updatedAt DateTime @updatedAt

                    email    String
                    password String

                    firstName   String?
                    lastName    String?
                    role        String?
                    phoneNumber String?
                    
                    settings UserSettings?
                }
                
                model UserSettings {
                    id        String   @id @default(uuid())
                    createdAt DateTime @default(now())
                    updatedAt DateTime @updatedAt

                    userId String @unique

                    user User @relation(fields: [userId], references: [id])
                }
            