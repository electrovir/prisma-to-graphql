{
    "name": "@prisma-to-graphql/mono-repo",
    "version": "1.0.0",
    "private": true,
    "license": "(MIT or CC0 1.0)",
    "author": {
        "name": "electrovir",
        "url": "https://github.com/electrovir"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "compile": "mono-vir for-each npm run compile",
        "docs": "mono-vir for-each-async npm run docs",
        "format": "virmator format",
        "publish": "virmator publish \"npm run compile && npm run test:all\"",
        "test": "npm run compile && npm run test:uncompiled",
        "test:all": "npm run compile && concurrently --colors --kill-others-on-fail -c auto --names tests,spelling,format,deps \"mono-vir for-each-async npm run test:all\" \"npm run test:spelling\" \"npm run test:format\" \"npm run test:deps\"",
        "test:deps": "virmator deps check",
        "test:format": "virmator format check",
        "test:spelling": "virmator spellcheck",
        "test:types": "npm run compile",
        "test:uncompiled": "mono-vir for-each npm run test"
    },
    "devDependencies": {
        "cspell": "^8.8.3",
        "dependency-cruiser": "^16.3.2",
        "esbuild": "^0.21.4",
        "mono-vir": "^1.0.1",
        "npm-check-updates": "~16.12.3",
        "prettier": "^3.2.5",
        "prettier-plugin-interpolated-html-tags": "^1.0.5",
        "prettier-plugin-jsdoc": "^1.3.0",
        "prettier-plugin-multiline-arrays": "^3.0.4",
        "prettier-plugin-organize-imports": "^3.2.4",
        "prettier-plugin-packagejson": "^2.5.0",
        "prettier-plugin-sort-json": "^4.0.0",
        "prettier-plugin-toml": "^2.0.1",
        "typescript": "^5.4.5",
        "virmator": "^11.5.2"
    }
}
